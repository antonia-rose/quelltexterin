{
  "name": "quelltexterin",
  "version": "1.0.0",
  "description": "a minimalistic and lightweight blog",
  "main": "index.html",
  "scripts": {
    "build": "npm run css:build",
    "css:build": "node-sass --recursive --output-style compressed site/themes/quelltexterin/sources/sass/ --output site/themes/quelltexterin/static/css",
    "css:watch": "onchange 'site/themes/quelltexterin/sources/sass/' -- npm run css:build",
    "lint:scss": "npm run stylelint \"site/themes/quelltexterin/sources/sass/**/*.scss\"; exit 0",
    "lint": "npm run lint:scss",
    "postcss:build": "autoprefixer -b 'last 2 versions' static/css/*.css",
    "prewatch": "npm run build",
    "precommit": "npm run lint",
    "start": "npm run watch",
    "stylelint": "stylelint",
    "watch": "npm run css:watch",
    "test": "npm run lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/soophie/quelltexterin.git"
  },
  "author": "Antonia Ilski",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/soophie/quelltexterin/issues"
  },
  "homepage": "https://github.com/soophie/quelltexterin#readme",
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "husky": "^0.15.0-rc.8",
    "node-sass": "^4.7.2",
    "onchange": "^3.3.0",
    "scss-cli": "0.0.6",
    "stylelint": "^9.1.1",
    "stylelint-config-sevenval": "^1.4.0"
  }
}
